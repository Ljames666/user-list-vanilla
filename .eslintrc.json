{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "unused-imports"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "always",
                "bracketSpacing": true,
                "printWidth": 100,
                "proseWrap": "always",
                "quoteProps": "as-needed",
                "semi": true,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "ES6",
                "useTabs": false,
                "endOfLine": "auto"
            }
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}